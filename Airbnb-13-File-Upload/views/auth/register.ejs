<!DOCTYPE html>
<html lang="en">
<%- include('../partials/head') %>

    <body class="min-h-screen w-full bg-gray-100">
        <%- include('../partials/nav') %>
            <main class="flex justify-center items-center pt-24">
                <!-- sign in form -->
                <div
                    class="flex flex-col w-full max-w-2xl px-4 py-8 bg-white rounded-lg shadow sm:px-6 md:px-8 lg:px-10">
                    <form action="/auth/register" method="POST" class="space-y-6">
                        <div class="self-center mb-3 text-xl font-bold text-gray-600 sm:text-2xl">
                            Create your account
                        </div>

                        <%- include('../partials/errors.ejs') %>

                            <div class="grid grid-cols-1 gap-4 sm:grid-cols-2">
                                <div>
                                    <label for="fname" class="block mb-2 text-sm font-medium text-gray-700">First
                                        Name</label>
                                    <input type="text" name="fname" id="fname" value="<%= fname || '' %>"
                                        class="w-full px-3 py-2 border border-gray-300 rounded focus:outline-none focus:border-orange-500" />
                                </div>
                                <div>
                                    <label for="lname" class="block mb-2 text-sm font-medium text-gray-700">Last
                                        Name</label>
                                    <input type="text" name="lname" id="lname" value="<%= lname || '' %>"
                                        class="w-full px-3 py-2 border border-gray-300 rounded focus:outline-none focus:border-orange-500" />
                                </div>
                            </div>
                            <div>
                                <label for="email" class="block mb-2 text-sm font-medium text-gray-700">Email</label>
                                <input type="email" name="email" id="email" value="<%= email || '' %>"
                                    class="w-full px-3 py-2 border border-gray-300 rounded focus:outline-none focus:border-orange-500" />
                            </div>
                            <div>
                                <label for="password"
                                    class="block mb-2 text-sm font-medium text-gray-700">Password</label>
                                <input type="password" name="password" id="password"
                                    class="w-full px-3 py-2 border border-gray-300 rounded focus:outline-none  focus:border-orange-500" />
                            </div>
                            <div>
                                <label for="confirmPassword"
                                    class="block mb-2 text-sm font-medium text-gray-700">Confirm
                                    Password</label>
                                <input type="password" name="confirmPassword" id="confirmPassword"
                                    class="w-full px-3 py-2 border border-gray-300 rounded focus:outline-none focus:border-orange-500" />
                            </div>
                            <div class="flex flex-col">
                                <p class="mr-4">I want to register as:</p>
                                <div class="flex items-center">
                                    <input type="radio" name="role" id="guest" value="guest"
                                        checked="<% role === 'guest' %>"
                                        class="w-4 h-4 text-orange-600 bg-gray-100 border-0 " />
                                    <label for="guest" class="ml-2 text-sm font-medium text-gray-700">Guest</label>
                                    <input type="radio" name="role" id="host" value="host"
                                        checked="<% role === 'host' %>"
                                        class="ml-4 w-4 h-4 outline-0 border-0 text-orange-600 bg-gray-100" />
                                    <label for="host" class="ml-2 text-sm font-medium text-gray-700">Host</label>
                                </div>
                            </div>
                            <div class="flex items-center">
                                <input type="checkbox" name="terms" id="terms" <% if (terms) { %> checked <% } %>
                                    class="w-4 h-4 text-orange-600 bg-gray-100 border-0 accent-orange-500
                                    focus:ring-0" />

                                    <label for="terms" class="ml-2 text-sm font-medium text-gray-700">I agree to the
                                        <a href="#" class="text-orange-600 hover:underline">Terms of Service</a> and
                                        <a href="#" class="text-orange-600 hover:underline">Privacy Policy</a></label>
                            </div>

                            <button type="submit"
                                class="w-full py-2 px-4 bg-orange-600 hover:bg-orange-700 text-white font-semibold rounded-lg shadow-md focus:outline-none">
                                Register
                            </button>
                            <p class="text-sm text-center text-gray-600 mt-4">
                                Already have an account?
                                <a href="/auth/login" class="text-orange-600 hover:underline">Sign in</a>
                            </p>
                    </form>
                </div>
            </main>
    </body>

</html>