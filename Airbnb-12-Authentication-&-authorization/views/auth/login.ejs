<!DOCTYPE html>
<html lang="en">
<%- include('../partials/head') %>

  <body class="min-h-screen w-full bg-gray-100">
    <%- include('../partials/nav') %>

      <main class="flex justify-center items-center pt-24">
        <div class="flex flex-co w-full max-w-xl px-4 py-8 bg-white rounded-lg shadow sm:px-6 md:px-4 lg:px-6">
          <form class="w-full" action="/auth/login" method="POST">
            <h1 class="text-3xl mb-4 text-center font-bold mt-8">Login to your account</h1>

            <%- include('../partials/errors.ejs') %>
              <div>
                <label for="email" class="block mb-2 text-sm font-medium text-gray-700">Email</label>
                <input type="email" name="email" id="email" value="<%= typeof email !== 'undefined' ? email : '' %>"
                  autocomplete="off"
                  class="w-full px-3 py-2 border border-gray-300 rounded focus:outline-none focus:border-orange-500" />
              </div>
              <div>
                <label for="password" class="block mb-2 text-sm font-medium text-gray-700">Password</label>
                <input type="password" name="password" id="password" autocomplete="off"
                  class="w-full px-3 py-2 border border-gray-300 rounded focus:outline-none  focus:border-orange-500" />
              </div>
              <div class="flex items-center justify-between mt-4">
                <div class="flex items-center">
                  <input type="checkbox" name="rememberMe" id="rememberMe"
                    class="w-4 h-4 text-orange-600 bg-gray-100 border-gray-300 rounded focus:ring-orange-500 focus:ring-2" />
                  <label for="rememberMe" class="ml-2 text-sm font-medium text-gray-700">Remember me</label>
                </div>
                <a href="/auth/forgot-password" class="text-sm text-orange-600 hover:underline">Forgot password?</a>
              </div>
              <button type="submit"
                class="w-full mt-3 text-white bg-orange-500 hover:bg-orange-600 focus:ring-4 focus:outline-none focus:ring-orange-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center">Login</button>
              <p class="mt-4 text-sm text-gray-600">Don't have an account? <a href="/auth/register"
                  class="text-orange-600 hover:underline">Sign up</a></p>

          </form>
        </div>
      </main>
  </body>

</html>